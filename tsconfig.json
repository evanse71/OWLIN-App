{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": false,
    "target": "ES2022",
    "lib": [
      "dom",
      "es2022"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend", 
    "scripts",
    "tests"
  ]
}
